{
    "$schema": "https://turbo.build/schema.json",
    "baseDependencies": {
      "build": ["^build"],
      "dev": [],
      "test": ["^build"],
      "lint": []
    },
    "pipeline": {
      "build": {
        "dependsOn": ["^build"],
        "outputs": ["dist/**", ".next/**", "!.next/cache/**", "storybook-static/**"]
      },
      "dev": {
        "cache": false,
        "persistent": true
      },
      "test": {
        "dependsOn": ["build"],
        "outputs": ["coverage/**"]
      },
      "lint": {},
      "clean": {
        "cache": false
      }
    }
  }