{
  "name": "penpot-phoenix",
  "version": "1.0.0",
  "private": true,
  "description": "The TypeScript monorepo for the Penpot rebuild project.",
  "packageManager": "pnpm@10.12.3",
  "scripts": {
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "clean": "turbo run clean && rm -rf node_modules"
  },
  "devDependencies": {
    "@types/node": "^24.0.4",
    "eslint": "^9.29.0",
    "prettier": "^3.6.1",
    "turbo": "^2.5.4",
    "typescript": "^5.8.3"
  }
}
